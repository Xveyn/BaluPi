# BaluPi Configuration
# Copy to .env and adjust values

# General
BALUPI_DEBUG=true
BALUPI_LOG_LEVEL=INFO
BALUPI_HOST=0.0.0.0
BALUPI_PORT=8000

# NAS Connection
BALUPI_NAS_URL=http://192.168.178.53
BALUPI_NAS_MAC_ADDRESS=AA:BB:CC:DD:EE:FF
BALUPI_NAS_USERNAME=admin
BALUPI_NAS_PASSWORD=

# Auth
BALUPI_SECRET_KEY=change-me-in-prod-generate-with-python-secrets

# Storage (absolute paths on Pi, relative for dev)
BALUPI_DATA_DIR=./data
BALUPI_CACHE_DIR=./data/cache/files
BALUPI_THUMBNAIL_DIR=./data/cache/thumbnails
BALUPI_DATABASE_PATH=./data/balupi.db

# Cache
BALUPI_CACHE_MAX_SIZE_GB=200.0
BALUPI_CACHE_EVICTION_THRESHOLD=0.85

# Energy Monitoring
BALUPI_ENERGY_SAMPLE_INTERVAL_SECONDS=30
BALUPI_ENERGY_DEFAULT_PRICE_CENTS=32.0

# Tapo Smart Plugs
BALUPI_TAPO_USERNAME=your-tapo-email@example.com
BALUPI_TAPO_PASSWORD=your-tapo-password

# NAS Power Detection
BALUPI_NAS_POWER_THRESHOLD_WATTS=30.0
